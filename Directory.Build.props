<Project>
  <ItemDefinitionGroup Condition="'$(PlatformToolsetVersion)'&gt;='142'">
    <ClCompile>
      <AdditionalOptions>
        /analyze
        /analyze:autolog:extsarif
        /analyze:ruleset$(SolutionDir)All.ruleset
      </AdditionalOptions>
      <PreprocessorDefinitions>CODE_ANALYSIS;%(ClCompile.PreprocessorDefinitions)</PreprocessorDefinitions>
      <TreatSpecificWarningsAsErrors />
    </ClCompile>
  </ItemDefinitionGroup>
</Project>